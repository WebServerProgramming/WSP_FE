<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="30dp"
    android:background="@color/black">


    <ImageView
        android:id="@+id/iv_item_main_schedule_detail"
        android:layout_width="78dp"
        android:layout_height="78dp"
        android:src="@drawable/ic_mypage_profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_item_main_schedule_detail"
        style="@style/pretendard16"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingTop="8dp"
        android:text="사람이름"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/iv_item_main_schedule_detail"
        app:layout_constraintStart_toStartOf="@+id/iv_item_main_schedule_detail"
        app:layout_constraintTop_toBottomOf="@+id/iv_item_main_schedule_detail" />

</androidx.constraintlayout.widget.ConstraintLayout>