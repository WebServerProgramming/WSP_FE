<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".club.ClubRegistrationActivity"
    android:background="@color/black">

    <Button
        android:id="@+id/btn_club_registration_back"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/baseline_arrow_back_24"
        android:backgroundTint="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_club_registration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="동아리 가입하기"
        android:textColor="@color/white"
        style="@style/pretendard32"
        android:layout_marginTop="80dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_club_registration"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="140dp"
        android:src="@drawable/basketball"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_club_registration_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="농구 동아리"
        android:textColor="@color/white"
        style="@style/pretendard20"
        app:layout_constraintBottom_toBottomOf="@+id/iv_club_registration"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_club_registration"
        app:layout_constraintTop_toTopOf="@+id/iv_club_registration"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="20dp"/>


    <TextView
        android:id="@+id/tv_club_registration_introduce"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="210dp"
        android:layout_marginEnd="20dp"
        android:text="자기소개"
        android:textColor="@color/white"
        style="@style/pretendard20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_club_registration"
        style="@style/pretendard20"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/layout_round_radius12_default"
        android:backgroundTint="@color/main_gray_600"
        android:layout_marginTop="250dp"
        android:hint="내용을 작성하세요."
        android:textColor="@color/white"
        android:textColorHint="@color/main_gray_400"
        android:padding="10dp"
        android:gravity="top"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_club_registration_done"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/button_enabled"
        android:enabled="false"
        android:text="가입 신청하기"
        android:textColor="@color/white"
        style="@style/pretendard20"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>