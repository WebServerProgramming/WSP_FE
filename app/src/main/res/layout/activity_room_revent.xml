<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".room.RoomReventActivity">

    <Button
        android:id="@+id/btn_room_revent_back"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="center"
        android:layout_marginStart="20dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/baseline_arrow_back_24"
        android:backgroundTint="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_room_revent_title"
        style="@style/pretendard32"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="80dp"
        android:text="테스트용 정기행사"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_room_revent"
        android:layout_width="0dp"
        android:layout_height="500dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/layout_round_radius12_default"
        android:backgroundTint="@color/main_gray_600"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_room_revent_title">

        <TextView
            android:id="@+id/tv_room_revent_1"
            style="@style/pretendard20"
            android:layout_width="80dp"
            android:layout_height="39dp"
            android:layout_marginStart="7dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/layout_round_radius12_default"
            android:backgroundTint="@color/main_gray_400"
            android:gravity="center"
            android:text="일시"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_room_revent_2"
            style="@style/pretendard20"
            android:layout_width="80dp"
            android:layout_height="39dp"
            android:layout_marginStart="7dp"
            android:layout_marginTop="120dp"
            android:background="@drawable/layout_round_radius12_default"
            android:backgroundTint="@color/main_gray_400"
            android:gravity="center"
            android:text="내용"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_room_revent_1" />

        <TextView
            android:id="@+id/tv_room_revent_3"
            style="@style/pretendard20"
            android:layout_width="80dp"
            android:layout_height="39dp"
            android:layout_marginStart="7dp"
            android:layout_marginTop="80dp"
            android:background="@drawable/layout_round_radius12_default"
            android:backgroundTint="@color/main_gray_400"
            android:gravity="center"
            android:text="참여자"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_room_revent_2" />

        <TextView
            android:id="@+id/tv_room_revent_date"
            style="@style/pretendard20"
            android:layout_width="80dp"
            android:layout_height="39dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/layout_round_radius12_default"
            android:backgroundTint="@color/main_blue_500"
            android:gravity="center"
            android:padding="5dp"
            android:text="주 2회"
            android:textColor="@color/white"
            app:layout_constraintStart_toEndOf="@+id/tv_room_revent_1"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_room_revent_content"
            style="@style/pretendard20"
            android:layout_width="250dp"
            android:layout_height="97dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/layout_round_radius12_default"
            android:backgroundTint="@color/main_gray_400"
            android:padding="5dp"
            android:text="테스트용 내용"
            android:textColor="@color/white"
            app:layout_constraintStart_toEndOf="@+id/tv_room_revent_1"
            app:layout_constraintTop_toTopOf="@+id/tv_room_revent_2" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_room_revent"
            android:layout_width="250dp"
            android:layout_height="145dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/layout_round_radius12_default"
            android:backgroundTint="@color/main_gray_400"
            android:padding="5dp"
            android:text="테스트용 일시"
            android:textColor="@color/white"
            app:layout_constraintStart_toEndOf="@+id/tv_room_revent_1"
            app:layout_constraintTop_toTopOf="@+id/tv_room_revent_3" />

        <TextView
            android:id="@+id/tv_room_revent_week_1"
            style="@style/pretendard20"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/circle_shape"
            android:backgroundTint="@color/main_gray_400"
            android:gravity="center"
            android:padding="5dp"
            android:text="화요일"
            android:textColor="@color/white"
            app:layout_constraintStart_toEndOf="@+id/tv_room_revent_1"
            app:layout_constraintTop_toBottomOf="@+id/tv_room_revent_date" />

        <TextView
            android:id="@+id/tv_room_revent_week_2"
            style="@style/pretendard20"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/circle_shape"
            android:backgroundTint="@color/main_gray_400"
            android:gravity="center"
            android:padding="5dp"
            android:text="목요일"
            android:textColor="@color/white"
            app:layout_constraintStart_toEndOf="@+id/tv_room_revent_week_1"
            app:layout_constraintTop_toBottomOf="@+id/tv_room_revent_date" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/btn_room_revent_done"
        style="@style/pretendard20"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/button_enabled"
        android:backgroundTint="@color/main_blue_500"
        android:text="참여하기"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>