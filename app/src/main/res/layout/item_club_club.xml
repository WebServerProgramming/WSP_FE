<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:layout_marginBottom="30dp">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_item_club_club"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_item_club_club_name"
        style="@style/pretendard20"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="6dp"
        android:layout_weight="1"
        android:text="방이름"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@+id/iv_item_club_club"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_item_club_club_introduction"
        style="@style/pretendard16"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:text="방설명"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@+id/tv_item_club_club_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_item_club_club_name" />

    <TextView
        android:id="@+id/tv_item_club_club_star"
        style="@style/pretendard16"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:text="별점"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@+id/tv_item_club_club_introduction"
        app:layout_constraintTop_toBottomOf="@+id/tv_item_club_club_introduction" />

    <Button
        android:id="@+id/btn_item_club_list_add"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/baseline_add_24"
        android:backgroundTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>