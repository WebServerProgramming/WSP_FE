<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="10dp"
    android:background="@drawable/layout_round_radius12_default"
    android:backgroundTint="@color/white"
    android:layout_marginBottom="15dp">

    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/tv_item_club_review_content"
        style="@style/pretendard20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="리뷰 내용"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_item_club_review_star"
        style="@style/pretendard20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="★ 4"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_item_club_review_content" />

</androidx.constraintlayout.widget.ConstraintLayout>