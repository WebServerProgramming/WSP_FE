<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".mypage.MyPageAlertActivity">

    <Button
        android:id="@+id/btn_mypage_alert_back"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/baseline_arrow_back_24"
        android:backgroundTint="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_mypage_alert_header"
        style="@style/pretendard20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="마이페이지"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/btn_mypage_alert_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_mypage_alert_back" />

    <TableLayout
        android:id="@+id/tl_mypage_alert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- 첫 번째 행 -->
        <TableRow android:layout_marginBottom="52dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    style="@style/pretendard20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="신규공지알림"
                    android:textColor="@color/white" />

                <TextView
                    style="@style/pretendard16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="새로운 공지에 대한 알림을 받아보세요!"
                    android:textColor="@color/main_gray_500" />
            </LinearLayout>

            <RadioGroup
                android:id="@+id/rg_mypage_alert_new"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_mypage_alert_new_on"
                    style="@style/pretendard20"
                    android:layout_width="52dp"
                    android:layout_height="40dp"
                    android:background="@drawable/selector_radio_button"
                    android:button="@null"
                    android:gravity="center"
                    android:text="ON"
                    android:textColor="@drawable/selector_radio_text" />

                <RadioButton
                    android:id="@+id/rb_mypage_alarm_new_off"
                    style="@style/pretendard20"
                    android:layout_width="52dp"
                    android:layout_height="40dp"
                    android:background="@drawable/selector_radio_button"
                    android:button="@null"
                    android:gravity="center"
                    android:text="OFF"
                    android:textColor="@drawable/selector_radio_text" />
            </RadioGroup>

        </TableRow>

        <!-- 두 번째 행 -->
        <TableRow android:layout_marginBottom="52dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    style="@style/pretendard20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="마감투표알림"
                    android:textColor="@color/white" />

                <TextView
                    style="@style/pretendard16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="마감 하루 전 알림을 보내드릴께요!"
                    android:textColor="@color/main_gray_500" />
            </LinearLayout>

            <RadioGroup
                android:id="@+id/rg_mypage_alert_remind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_mypage_alert_remind_on"
                    style="@style/pretendard20"
                    android:layout_width="52dp"
                    android:layout_height="40dp"
                    android:background="@drawable/selector_radio_button"
                    android:button="@null"
                    android:gravity="center"
                    android:text="ON"
                    android:textColor="@drawable/selector_radio_text" />

                <RadioButton
                    android:id="@+id/rb_mypage_alert_remind_off"
                    style="@style/pretendard20"
                    android:layout_width="52dp"
                    android:layout_height="40dp"
                    android:background="@drawable/selector_radio_button"
                    android:button="@null"
                    android:gravity="center"
                    android:text="OFF"
                    android:textColor="@drawable/selector_radio_text" />
            </RadioGroup>

        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/btn_mypage_alert_done"
        style="@style/pretendard20"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/button_enabled"
        android:text="저장하기"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>