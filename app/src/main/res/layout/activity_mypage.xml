<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mypage.MyPageActivity"
    android:background="@color/black">

    <Button
        android:id="@+id/btn_mypage_back"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/baseline_arrow_back_24"
        android:backgroundTint="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_mypage_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="마이페이지"
        android:textColor="@color/white"
        style="@style/pretendard20"
        app:layout_constraintBottom_toBottomOf="@+id/btn_mypage_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_mypage_back" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_mypage_profile"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginTop="120dp"
        android:src="@drawable/ic_mypage_profile"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/tv_mypage_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/pretendard_semi_bold"
        android:text="닉네임"
        android:textColor="@color/white"
        style="@style/pretendard24"
        app:layout_constraintTop_toBottomOf="@+id/iv_mypage_profile"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"  />


    <android.widget.Button
        android:id="@+id/btn_mypage_alert"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/layout_round_radius12_default"
        android:backgroundTint="@color/main_gray_600"
        android:text="알림 설정"
        android:textColor="@color/white"
        style="@style/pretendard20"
        android:layout_marginTop="640dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"/>


    <android.widget.Button
        android:id="@+id/btn_mypage_logout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/layout_round_radius12_default"
        android:backgroundTint="@color/main_gray_600"
        android:text="로그아웃"
        android:textColor="@color/white"
        style="@style/pretendard20"
        app:layout_constraintTop_toBottomOf="@+id/btn_mypage_alert"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>